<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:background="@drawable/topbar" />

    <ImageView
        android:id="@+id/imageback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/backstyle" />

    <ImageView
        android:id="@+id/subject_tv"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:src="@drawable/halloffame" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#4675d4"
        android:scaleType="fitCenter"
        android:src="@drawable/custom" >
    </ImageButton>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="5dp"
        android:layout_height="46dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/seperator" />

    <ImageView
        android:id="@+id/badge_gold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_below="@+id/imageback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/badge" />

    <ImageView
        android:id="@+id/badge_silver"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_below="@+id/imageback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/silver" />

    <ImageView
        android:id="@+id/badge_bronze"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_below="@+id/imageback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/bronze" />

    <TextView
        android:id="@+id/textsem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text=" 5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="40dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textbadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/badge_gold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-15dp"
        android:text="Here&apos;s your badge for"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/attend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badge_gold"
        android:layout_toRightOf="@+id/badge_gold"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/attend"
        android:layout_alignBottom="@+id/attend"
        android:layout_alignLeft="@+id/textbadge"
        android:text="Overall Attendance"
        android:textColor="#000000"
        android:textSize="18dp"
        android:typeface="serif" />

    <ProgressBar
        android:id="@+id/progressbarlevel"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/attend"
        android:layout_below="@+id/attend"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textsem"
        android:layout_alignBottom="@+id/textsem"
        android:layout_alignLeft="@+id/attend"
        android:layout_marginLeft="30dp"
        android:text="Sem"
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/thtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/attend"
        android:text="th"
        android:textColor="#000000"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbarlevel"
        android:layout_toLeftOf="@+id/badge_gold"
        android:src="@android:drawable/arrow_up_float" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:text="Lag" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/textView2"
        android:src="@android:drawable/arrow_up_float" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textsem"
        android:text=" optimal" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/progressbarlevel"
        android:src="@android:drawable/arrow_up_float" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView5"
        android:text="studious" />

</RelativeLayout>