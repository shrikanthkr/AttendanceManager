<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:background="@drawable/topbar" />

    <ImageView
        android:id="@+id/imageback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/backstyle" />

    <ImageView
        android:id="@+id/subject_tv"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:src="@drawable/alerts" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#4675d4"
        android:scaleType="fitCenter"
        android:src="@drawable/custom" >
    </ImageButton>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="5dp"
        android:layout_height="46dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/seperator" />

    <TextView
        android:id="@+id/ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Overall Attendance"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif"
         />

    <ProgressBar
        android:id="@+id/overallprogress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
         />

    <ImageView
        android:id="@+id/danger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageback"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/danger" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_centerVertical="true"
        android:text="Overall classes"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif"
         />

    <TextView
        android:id="@+id/overallclasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/overallclasses"
        android:layout_marginTop="29dp"
        android:text="Hours attended"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/overallattended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/overallclasses"
        android:text=""
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/overallattended"
        android:layout_marginTop="26dp"
        android:text="Overall bunks"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/overallbunks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/overallattended"
        android:text=""
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Overall percent"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/bunkper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/overallprogress"
        android:text="TextView" />

    <TextView
        android:id="@+id/overallattendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/overallbunks"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

</RelativeLayout>