<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <RelativeLayout  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    >
    <ImageView
           android:id="@+id/imageView1"
           android:layout_width="fill_parent"
           android:layout_height="50dp"
           android:scaleType="fitStart"
           android:background="@drawable/topbar" />
    
    <ImageView
       android:layout_width="fill_parent"
       android:layout_height="45dp"
       android:gravity="center_horizontal"
       android:layout_marginTop="5dp"
       android:src="@drawable/welcome"
       android:id="@+id/subject_tv"
       
       />
   </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Name"
        android:textSize="22dp" 
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/username"
        android:maxLines="1"
        android:hint="[your name]"
        android:textSize="22dp"  
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="7dp"  
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter University Name"
        android:textSize="22dp" 
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:typeface="serif"
        android:layout_marginLeft="10dp"/>
     <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/univname"
        android:maxLines="1"
        android:hint="[University name]"
        android:textSize="22dp"  
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"  
        />
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Min Attendance"
        android:typeface="serif"
        android:textSize="22dp" 
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"/>
     <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/attendance"
        android:maxLines="1"
        android:textColor="#000000"
        android:hint="[Minimum attendance %]"
        android:textSize="22dp"  
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"  
        />
     <Button
        android:id="@+id/button_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/checkcustom"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="done"
         android:layout_gravity="center_horizontal" />
     
</LinearLayout>