<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:background="@drawable/topbar" />

    <ImageView
        android:id="@+id/imageback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/backstyle" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#4675d4"
        android:scaleType="fitCenter"
        android:src="@drawable/custom" >
    </ImageButton>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="5dp"
        android:layout_height="46dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/seperator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="ATTENDANCE LEVEL"
        android:textColor="#000000"
        android:textSize="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/totalbunks"
        android:text="Hours Attended"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/totalbunks"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/totalbunkslabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/totalpresent"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_below="@+id/totalbunks"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/totalbunkslabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/totalpresent"
        android:text="Total Hours"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/totalhours"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_below="@+id/totalpresent"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/totalbunkslabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/percentage"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/totalhours"
        android:text="Attendance"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_below="@+id/totalhours"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/totalbunkslabel"
        android:text=""
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/totalbunkslabel"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_centerVertical="true"
        android:text="Total Bunks"
        android:textColor="#000000"
        android:textSize="22dp"
        android:typeface="serif" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

    <TextView
        android:id="@+id/bunkper"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/totalbunks"
        android:layout_below="@+id/imageView1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:typeface="serif" />

    <TextView
        android:id="@+id/bunksleft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/percentage"
        android:layout_marginLeft="20dp"
        android:typeface="serif"
        android:textColor="#000000"
        android:textSize="18dp" />

</RelativeLayout>